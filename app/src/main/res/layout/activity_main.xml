<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:text="@string/select_media_files_to_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <Button android:text="@string/select_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_images_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="selectImages"/>

    <Button android:text="@string/select_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_videos_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="selectVideos"/>

    <Button android:text="@string/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="play"/>
</LinearLayout>